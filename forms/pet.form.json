{
  "name": "::Pet Admin",
  "action": {
    "bind": {
      "model": "pet",
      "option": { "withs": { "doctor": {} } }
    }
  },
  "layout": {
    "primary": "id",
    "actions": [],
    "form": {
      "props": {},
      "sections": [
        {
          "title": "更多资料",
          "desc": "更为详细的宠物信息",
          "columns": [
            { "name": "住院天数", "width": 12 },
            { "name": "消费金额", "width": 12 },

            { "name": "change事件", "width": 12 },
            { "name": "消费金额2", "width": 12 }
          ]
        }
      ]
    },
    "config": {
      "showAnchor": true
    }
  },
  "fields": {
    "form": {
      "表格": {
        "bind": "id",
        "edit": {
          "type": "Table",
          "props": {
            "model": "pet",
            "query": {
              "id": "1",
              "status": ":status"
            }
          }
        }
      },
      "ID": {
        "bind": "id",
        "edit": {
          "type": "Input",
          "props": {
            "disabled": true
          }
        }
      },
      "名称": {
        "bind": "name",
        "in": "scripts.pet.SaveName",
        "edit": {
          "type": "Input",
          "props": {
            "placeholder": "请输入宠物名称 {{id}}"
          }
        }
      },
      "类型": {
        "bind": "type",
        "edit": {
          "type": "RadioGroup",
          "props": {
            "xProps": {
              "$remote": {
                "process": "models.pet.Get",
                "query": {
                  "select": ["id", "name"]
                }
              }
            }
          }
        }
      },
      "状态": {
        "bind": "status",
        "in": "scripts.pet.SaveTag",
        "out": "scripts.pet.GetTag",
        "edit": {
          "type": "Select",
          "props": {
            "xProps": {
              "$remote": {
                "process": "models.pet.Get",
                "query": {
                  "select": ["id", "name"]
                }
              }
            }
          }
        }
      },
      "住院天数": {
        "bind": "stay",
        "edit": {
          "type": "Select",
          "props": {
            "options": [
              {
                "label": "选项3",
                "value": "3"
              },
              {
                "label": "选项4",
                "value": "4"
              }
            ],
            "$on:change": {
              "process": "scripts.event.OnChange",
              "query": {}
            }
          }
        }
      },
      "change事件": {
        "bind": "change",
        "edit": {
          "type": "Select",
          "props": {
            "options": [
              {
                "label": "选项1",
                "value": "1"
              },
              {
                "label": "选项2",
                "value": "2"
              }
            ],
            "$on:change": {
              "process": "scripts.event.OnChange2",
              "query": {}
            }
          }
        }
      },
      "消费金额": {
        "bind": "cost",
        "edit": {
          "type": "Input",
          "props": {}
        }
      },
      "消费金额2": {
        "bind": "cost2",
        "edit": {
          "type": "Input",
          "props": {}
        }
      },
      "相关图片": {
        "bind": "images",
        "view": { "type": "Image", "compute": "Download" },
        "edit": {
          "type": "Upload",
          "compute": "Upload",
          "props": {
            "filetype": "image",
            "$api": { "process": "fs.system.Upload" }
          }
        }
      },
      "List测试": {
        "bind": "test_array",
        "edit": {
          "type": "List",
          "props": {
            "name": "test",
            "showLabel": false
          }
        }
      }
    }
  }
}
